{
  "name": "markslide",
  "version": "1.0.0",
  "description": "Create simple presentations in markdown",
  "main": "index.js",
  "author": "Daniel Sneijers <daniel.sneijers@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "run-s clean copy-assets build:production serve",
    "dev": "run-s clean copy-assets build:development",
    "test": "run-p flow lint test:unit",
    "build:development": "NODE_ENV=development webpack-dashboard -- webpack-dev-server --open",
    "build:production": "NODE_ENV=production webpack",
    "serve": "cd dist && serve -s",
    "clean": "rm -rf ./dist",
    "copy-assets": "mkdir -p ./dist/images && cp -a ./config/images/. ./dist/images && cp ./config/custom.css ./dist/custom.css",
    "test:unit": "jest --coverage --no-cache",
    "test:watch": "jest --watch",
    "test:snapshot": "jest --updateSnapshot",
    "flow": "flow status",
    "flow:coverage": "flow-coverage-report -i 'src/**/*.js' -x 'src/**/*.spec.js' -t html -t json -t text",
    "lint": "run-p lint:*",
    "lint:js": "eslint ./src && eslint ./config",
    "lint:css": "stylelint ./src/**/*.css",
    "format": "prettier-standard 'src/**/*.js'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "prettier --write",
        "standard --fix",
        "git add"
      ]
    }
  },
  "moduleRoots": [
    "src"
  ],
  "dependencies": {
    "classnames": "^2.2.5",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "prismjs": "^1.6.0",
    "ramda": "^0.23.0",
    "react": "^15.5.3",
    "react-dom": "^15.5.3",
    "react-router": "^4.1.0",
    "react-router-dom": "^4.1.0",
    "react-transition-group": "^1.1.2",
    "serve": "^5.1.5"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-jest": "^20.0.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-flow-react-proptypes": "^2.2.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-plugin-ramda": "^1.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.3.3",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "css-loader": "^0.28.0",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.0",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "flow-bin": "^0.46.0",
    "flow-coverage-report": "^0.3.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.1",
    "lint-staged": "^3.4.1",
    "npm-run-all": "^4.0.2",
    "postcss": "^6.0.1",
    "postcss-cssnext": "^2.10.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.5",
    "prettier": "^1.3.1",
    "prop-types": "^15.5.10",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "next",
    "react-test-renderer": "^15.5.4",
    "script-ext-html-webpack-plugin": "^1.7.4",
    "style-loader": "^0.17.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "webpack": "^2.5.1",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-server": "^2.4.2"
  }
}
